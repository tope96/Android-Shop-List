<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#09C"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btGoToWeb"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:onClick="goTo"
            android:text="OtwÃ³rz Google" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btPrev"
                android:layout_width="63dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                android:src="@drawable/ic_chevron_left_black_24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:src="@drawable/pepefroggie" />

            <ImageView
                android:id="@+id/btNext"
                android:layout_width="63dp"
                android:layout_height="99dp"
                android:layout_weight="1"
                android:src="@drawable/ic_chevron_right_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btPrevMusic"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_previous_white_24dp" />

            <ImageView
                android:id="@+id/btPlayMusic"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_play_arrow_white_24dp" />

            <ImageView
                android:id="@+id/btStopMusic"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_stop_white_24dp" />

            <ImageView
                android:id="@+id/btNextMusic"
                android:layout_width="75dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@drawable/ic_skip_next_white_24dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>